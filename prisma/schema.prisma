generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  TEACHER
  ADMIN
}

enum XRole {
  SUPERADMIN
  ADMIN
}

model User {
  id       String @id @default(cuid())
  name     String
  email    String
  password String
  role     Role   @default(USER)
  posts    Post[]
}

model Admin {
  id       String @id @default(cuid())
  name     String
  aemail   String
  password String
  role     XRole  @default(ADMIN)
}

model Post {
  id     String @id @default(cuid())
  slug   String
  title  String
  body   String
  userId String
  author User   @relation(fields: [userId], references: [id])
}

model Blog {
  id String @id @default(cuid())
  email String 
  content String @db.VarChar(500)
}